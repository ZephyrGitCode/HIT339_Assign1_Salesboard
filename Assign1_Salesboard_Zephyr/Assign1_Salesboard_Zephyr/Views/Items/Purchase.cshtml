@model Assign1_Salesboard_Zephyr.DBData.Item

@{
    ViewData["Title"] = "Purchase";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Purchase</h1>
<h3>Are you sure you want to buy this?</h3>
<div>
    <img src="@Html.DisplayFor(model => model.Itemimage)" style="height:200px;width:200px;border-radius:20px;margin-bottom:20px;" />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Itemname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Itemname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Itemdesc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Itemdesc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Postdate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Postdate)
        </dd>
    </dl>
</div>

<form asp-action="Purchase">
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" max="@Model.Quantity" min="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" name="ItemId"/>
    <input type="submit" value="Add To Cart" class="btn btn-primary" /> |
    <a asp-action="Index">Back to List</a>
</form>
