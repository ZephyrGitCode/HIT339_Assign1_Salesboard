@model Assign1_Salesboard_Zephyr.DBData.Item

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />

    <img src="@Html.DisplayFor(model => model.Itemimage)" style="height:200px;width:200px;border-radius:20px;margin-bottom:20px;" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Itemname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Itemname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Itemdesc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Itemdesc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Postdate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Postdate)
        </dd>
    </dl>
</div>
<div>
    @if (ViewBag.UserId == Model.UserId || ViewBag.IsAdmin == true)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit |</a>
        <a asp-action="MyItems">Back to List</a>
    }
    else
    {
        <a asp-action="Index">Back to List</a>
    }

</div>
