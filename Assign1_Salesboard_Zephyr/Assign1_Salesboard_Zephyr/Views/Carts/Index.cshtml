@model IEnumerable<Assign1_Salesboard_Zephyr.DBData.Cart>

@{
    ViewData["Title"] = "Checkout";
}

<h1>Shopping Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CartId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CartId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemId)
            </td>
            <td>
                @if (item.Quantity == 0)
                {
                    <p>Sold @item.Quantity</p>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Quantity)
                }

            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


<button type="button" class="btn btn-outline-primary btn-lg" asp-action="Checkout" ><a asp-action="Checkout">Checkout</a></button>