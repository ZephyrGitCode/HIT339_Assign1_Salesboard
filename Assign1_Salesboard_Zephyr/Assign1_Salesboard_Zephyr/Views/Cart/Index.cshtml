@model Assign1_Salesboard_Zephyr.DBData.Item

@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>@ViewBag.prod</p>

<table cellpadding="2" cellspacing="2" border="1">
    <thead>
        <tr>
            <th>
                ItemName
            </th>
            <th>
                Itemdesc
            </th>
            <th>
                Category
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>
                Itemimage
            </th>
            <th>
                Total
            </th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.cart != null){
            @foreach (var item in ViewBag.cart)
            {
                <tr>
                    <td><a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Remove">Remove</a></td>
                    <td>@item.Itemname</td>
                    <td>@item.Itemdesc</td>
                    <td>@item.Category</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>(@item.Quantity * item.Price)</td>
                </tr>
            }
            <tr>
                <td align="right" colspan="6">Sum</td>
                <td>
                    @ViewBag.total
                </td>
            </tr>
        }

    </tbody>
</table>
<br />
